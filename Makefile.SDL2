CC = gcc

CFLAGS = -O2 -I./WRAPPER
LDFLAGS = -lSDL2 -lSDL2_mixer -lSDL2_image
DEFINES = -DDEBUG -DSOUND_ENABLED
DEFINES += -DRECENT_RENDER
OUTPUT = violent

SOURCES = src/main.c WRAPPER/PC_SDL2.c
OBJS = ${SOURCES:.c=.o}

${OUTPUT}:${OBJS}
	${CC} -o ${OUTPUT} ${SOURCES} ${CFLAGS} ${LDFLAGS} ${DEFINES} 
	
clean:
	rm *.o
	rm ${OUTPUT}
